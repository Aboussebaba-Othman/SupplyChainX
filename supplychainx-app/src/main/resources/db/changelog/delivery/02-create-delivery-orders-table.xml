<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="02-create-delivery-orders-table" author="supplychainx">
        <createTable tableName="delivery_orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_number" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="order_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="expected_delivery_date" type="DATE"/>
            <column name="actual_delivery_date" type="DATE"/>
            <column name="delivery_address" type="VARCHAR(255)"/>
            <column name="delivery_city" type="VARCHAR(100)"/>
            <column name="delivery_postal_code" type="VARCHAR(20)"/>
            <column name="total_amount" type="DECIMAL(15,2)"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="delivery_orders"
                baseColumnNames="customer_id"
                constraintName="fk_delivery_order_customer"
                referencedTableName="customers"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>

        <createIndex tableName="delivery_orders" indexName="idx_delivery_order_number">
            <column name="order_number"/>
        </createIndex>
        <createIndex tableName="delivery_orders" indexName="idx_delivery_order_customer">
            <column name="customer_id"/>
        </createIndex>
        <createIndex tableName="delivery_orders" indexName="idx_delivery_order_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="delivery_orders" indexName="idx_delivery_order_date">
            <column name="order_date"/>
        </createIndex>
    </changeSet>


</databaseChangeLog>
