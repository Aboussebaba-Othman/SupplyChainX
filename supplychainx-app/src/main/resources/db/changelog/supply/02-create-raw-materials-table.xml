<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="02-create-raw-materials-table" author="supplychainx">
        <createTable tableName="raw_materials">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="stock" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="stock_min" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="unit" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="unit_price" type="DOUBLE"/>
            <column name="category" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
        </createTable>

        <createIndex indexName="idx_raw_materials_code" tableName="raw_materials">
            <column name="code"/>
        </createIndex>
        <createIndex indexName="idx_raw_materials_category" tableName="raw_materials">
            <column name="category"/>
        </createIndex>
        <createIndex indexName="idx_raw_materials_stock" tableName="raw_materials">
            <column name="stock"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
