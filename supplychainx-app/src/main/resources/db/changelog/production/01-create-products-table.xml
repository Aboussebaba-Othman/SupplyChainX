<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="01-create-products-table" author="supplychainx">
        <createTable tableName="products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="category" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="stock" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="stock_min" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="production_time" type="INT">
                <constraints nullable="true"/>
            </column>
            <column name="cost" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="updated_by" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex indexName="idx_products_code" tableName="products">
            <column name="code"/>
        </createIndex>

        <createIndex indexName="idx_products_category" tableName="products">
            <column name="category"/>
        </createIndex>

        <createIndex indexName="idx_products_stock" tableName="products">
            <column name="stock"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
