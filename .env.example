# ==============================================
# Database Configuration
# ==============================================

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=supplychainx_db
MYSQL_USER=supplychainx_user
MYSQL_PASSWORD=your_password_here
MYSQL_PORT=3306

# Application Database Connection
DB_USERNAME=supplychainx_user
DB_PASSWORD=supplychainx_password

# ==============================================
# Email/SMTP Configuration (for stock alerts)
# ==============================================

# Option 1: Gmail (recommended for development)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password  # 16-character App Password from Google

# Option 2: Outlook/Office 365
# MAIL_USERNAME=your-email@outlook.com
# MAIL_PASSWORD=your-outlook-password

# Alert Configuration
ALERT_EMAIL_ENABLED=false  # Set to 'true' to enable email sending
ALERT_EMAIL_TO=admin@supplychainx.com  # Recipient email for alerts

# ==============================================
# How to get Gmail App Password:
# 1. Go to: https://myaccount.google.com/security
# 2. Enable Two-Factor Authentication (2FA)
# 3. Go to: https://myaccount.google.com/apppasswords
# 4. Select 'Mail' and 'Other (Custom name)'
# 5. Copy the 16-character password (e.g., abcd efgh ijkl mnop)
# ==============================================

# ==============================================
# Other Services
# ==============================================

# phpMyAdmin Configuration
PMA_PORT=8080

# Application Configuration
APP_PORT=8090
SPRING_PROFILES_ACTIVE=dev

# Mailhog Configuration (for email testing)
SMTP_PORT=1025
MAILHOG_UI_PORT=8025
